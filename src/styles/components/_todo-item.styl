.todo-item {
  position: relative
  margin: 0 2rem 2rem 2rem
  padding: 2rem
  display: flex
  flex-direction: column
  flex-basis: calc(33.333% - 4rem)
  flex-grow: 0
  flex-shrink: 0
  border 1px solid lightgray
  background-color: #ebecf0
  color: #172b4d
  box-shadow: 0 0 0 5px rgba(0,0,0,0.03)
  &--done {
    background-color: #a9a9a9;
    &::after {
      content: "âœ“"
      font-size: 2rem
      font-weight: 600
      position: absolute
      top: 0
      right: 0
    }

    & > .todo-item__description {
      background-color: #dedbdb;
    }
  }
}

.todo-item__title {
  text-align: center
  &::first-letter {
    text-transform: capitalize
  }
}

.todo-item__description {
  padding: 0.3rem
  margin: 1rem 0
  background-color: #fff
  border-radius: 4px
  &::first-letter {
    text-transform: capitalize
  }
}

.todo-item__wrapper {
  margin-top: auto
  display: flex
  justify-content: space-between
}

.todo-item__priority {
  padding: 6px
  width: 70px;
  background: #c5c5c5
  border-radius: 50%
  font-weight: 600
  text-align: center;
}