.main-button {
    padding: 0.5rem 1rem
    font-size: 1.2rem
    border-radius: 10px
    border: 1px solid #afafaf
    background-color: rgba(0,0,0,.24)
    color: #fff
    transition: background-color 0.5s ease
}

.main-button:hover {
    background-color: #172b4d
}

.main-button--dark {
    background-color: #172b4d
}

.main-button--large {
    width: 130px
}