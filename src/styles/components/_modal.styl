.modal {
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  z-index: 2
  display: flex
  align-items: center
  justify-content: center
}

.modal__background {
  position: fixed
  top: 0
  left: 0
  bottom: 0
  right: 0
  background-color: rgba(216, 216, 216, 0.86)
}

.modal__card {
  padding: 3rem 2rem
  background-color: #fff
  max-height: calc(100% - 40px)
  max-width: 500px
  width: 100%
  border-radius: 6px
  overflow: hidden
  display: flex
  flex-direction: column
  z-index: 2
  box-shadow: 0 0 19px 3px rgba(0, 0, 0, 0.2)
}