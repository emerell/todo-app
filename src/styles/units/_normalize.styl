* { 
    -moz-box-sizing: border-box; 
    -webkit-box-sizing: border-box; 
    box-sizing: border-box; 
}

img {
  max-width 100%;
}

body, html {
    background-color: #363636!important;
    margin: 0;
    padding: 0;
}

body {
    color: #4a4a4a;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.5;
}

a {
    cursor: pointer;
    text-decoration: none;
}

h1, h2, h3, h4, h4, p, ul {
    margin: 0;
    padding: 0
}

button:focus {
    outline: none;
}
