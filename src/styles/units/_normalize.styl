* { 
    -moz-box-sizing: border-box 
    -webkit-box-sizing: border-box 
    box-sizing: border-box 
}

img {
  max-width 100%
}

body, html {
    margin: 0
    padding: 0
}

body {
    background-color: #f4f5f7
    font-size: 1rem
    font-family: sans-serif
    font-weight: 400
    line-height: 1.5
}

a {
    cursor: pointer
    text-decoration: none
}

h1, h2, h3, h4, h4, p, ul {
    margin: 0
    padding: 0
}

button:focus {
    outline: none
}

li {
    list-style: none
}

button {
    border: none
    cursor: pointer
    background-color: inherit
}